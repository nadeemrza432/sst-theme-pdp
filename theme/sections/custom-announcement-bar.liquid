{{ 'component-custom-announcement-bar.css' | asset_url | stylesheet_tag }}

{%- liquid
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

<div
  class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% elsif section.settings.show_line_separator %} utility-bar--bottom-border-social-only{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="announcement_wrapper utility-bar__grid{% if announcement_bar and language_country_selector%} utility-bar__grid--3-col{% elsif language_country_selector %} utility-bar__grid--2-col{% endif %}">
    {%- if section.blocks.size == 1 -%}
      <div
        class="single_annoucement"
        role="region"
        aria-label="{{ 'sections.header.announcement' | t }}"
        {{ block.shopify_attributes }}
      >
        {%- if section.blocks.first.settings.text != blank -%}
          {%- if section.blocks.first.settings.link != blank -%}
            <a
              href="{{ section.blocks.first.settings.link }}"
              class=""
            >
          {%- endif -%}
          <p class="h5 flex items-center justify-center">
            <span class="annoucement_text">{{ section.blocks.first.settings.text | escape }}</span>
            <span class="yellow_icon">{% render 'icon-yellow-dot' %}</span>
          </p>
          {%- if section.blocks.first.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- elsif section.blocks.size > 1 -%}
        <div class="announcement-bar-slider-container">
          <div
            class="announcement-bar-slider"
            id="Slider-{{ section.id }} marquee_blocks"
            aria-live="polite"
            aria-atomic="true"
            data-autoplay="{{ section.settings.auto_rotate }}"
            data-speed="{{ section.settings.change_slides_speed }}"
          >
            {%- for block in section.blocks -%}
              <div
                class="marquee_text"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
                role="group"
                aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                tabindex="-1"
              >
                <div
                  class=""
                  role="region"
                  aria-label="{{ 'sections.header.announcement' | t }}"
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a
                        href="{{ block.settings.link }}"
                        class="announcement-bar__link link link--text focus-inset animate-arrow"
                      >
                    {%- endif -%}
                    <p class="h5 flex items-center justify-center">
                      <span class="annoucement_text">{{ block.settings.text | escape }}</span>
                      <span class="yellow_icon">{% render 'icon-yellow-dot' %}</span>
                    </p>
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
            {%- for block in section.blocks -%}
              <div
                class="marquee_text"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
                role="group"
                aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                tabindex="-1"
              >
                <div
