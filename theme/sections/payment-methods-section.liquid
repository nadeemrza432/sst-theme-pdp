<div>
  <div class="page-width">
    <div class="payments_methods_container">
      <div class="flex gap-24">
        <div class="w-[35%] flex flex-col justify-between">
          <div>
            <h2 class="text-black mb-3">Unlock Seamless Transactions.</h2>
            <div class="p3 text-[#282D56]">Your Preferred Payment, Our Pleasure!</div>
          </div>
          <p class="text-[#007185] cursor-pointer go_to_top">Go back to top</p>
        </div>
        <div class="payments_images flex w-[60%] gap-3 flex-wrap">
          {% for block in section.blocks %}
            <div class="w-36 h-20">
              {{ block.settings.image | image_url: width: 150 | image_tag }}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelector('.go_to_top').addEventListener('click', () => {
    window.scroll({
      top: 0,
      left: 0,
      behavior: 'smooth',
    });
  });
</script>

{% style %}
  .payments_methods_container{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .payments_images img{
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 11px;
  }
{% endstyle %}

{% schema %}
{
  "name": "Payments Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "payment_block",
      "name": "Payment Method Block",
      "limit": 15,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Payment Method Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Payments Section",
      "category": "text"
    }
  ]
}
{% endschema %}
